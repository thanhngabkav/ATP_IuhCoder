<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="Entities">
        <jta-data-source>java:jboss/ATP</jta-data-source>
        <class>Entities.AcceptOutput</class>
        <class>Entities.Contest</class>
        <class>Entities.Input</class>
        <class>Entities.NotAcceptOutput</class>
        <class>Entities.Output</class>
        <class>Entities.Problem</class>
        <class>Entities.Student</class>
        <class>Entities.StudentContestDetail</class>
        <class>Entities.Submission</class>
        <class>Entities.SubmissionResult</class>
        <class>Entities.Teacher</class>
        <properties>
            <property name="eclipselink.jdbc.bath-writing" value="JDBC"/>
            <property name="eclipselink.target-database" value="SQLServer"/>
        </properties>
    </persistence-unit>
</persistence>
